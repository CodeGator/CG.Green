{
  "AllowedHosts": "*",
  "DAL": {
    "DropDatabaseOnStartup": true,
    "MigrateDatabaseOnStartup": true,
    "Provider": "SqlServer",
    "InMemory": {
      "DatabaseName": "",
      "AssemblyName": "CG.Green.Data.InMemory"
    },
    "SqlServer": {
      "ConnectionString": "",
      "AssemblyName": "CG.Green.Data.SqlServer"
    },
    "Sqlite": {
      "ConnectionString": "",
      "AssemblyName": "CG.Green.Data.Sqlite"
    }
  },
  "Seeding": {
    "SeedOnStartup": true,
    "Force": false,
    "FileNames": [
      "Seeding/apiscopes.json",
      "Seeding/identityresources.json",
      "Seeding/clients.json",
      "Seeding/users.json",
      "Seeding/userclaims.json",
      "Seeding/roles.json",
      "Seeding/userroles.json"
    ]
  },
  "Identity": {
    "AspNet": { },
    "Duende": { }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "\\Logging\\CG.Green.Host\\log.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
