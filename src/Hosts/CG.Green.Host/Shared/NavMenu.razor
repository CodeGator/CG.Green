<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@Localizer["Home"]</MudNavLink>

    <AuthorizeView Policy=@PolicyNameDefaults.SuperAdminPolicy>
        <Authorized>
            <MudNavGroup Icon="@Icons.Material.TwoTone.AdminPanelSettings" Title=@Localizer["Admin"]>
                <MudNavLink Href="/admin/clients" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Apps">@Localizer["Clients"]</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Icon="@Icons.Material.TwoTone.BugReport" Title=@Localizer["Debugging"]>
                <MudNavLink Href=".well-known/openid-configuration" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Biotech">@Localizer["DiscoveryEndpoint"]</MudNavLink>
                <MudNavLink Href="swagger" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Info">Swagger</MudNavLink>
                <MudNavLink Href="debugging/whoami" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Face">@Localizer["WhoAmI"]</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView>
        <Authorized>
            <MudNavGroup Icon="@Icons.Material.TwoTone.Help" Title=@Localizer["Help"]>
                <MudNavLink Href="help/about" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.QuestionAnswer">@Localizer["About"]</MudNavLink>
            </MudNavGroup>
        </Authorized>        
    </AuthorizeView>  

</MudNavMenu>


