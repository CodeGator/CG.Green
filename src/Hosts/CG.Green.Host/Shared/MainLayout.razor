@inherits LayoutComponentBase

<MudThemeProvider Theme="@GreenTheme.Instance()" />
<MudDialogProvider />
<MudSnackbarProvider />
    
<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <LoginDisplay />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/CodeGator/CG.Green/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Dense>
            <MudText Class="pt-2" Color="Color.Tertiary" Typo="Typo.caption">Version: @typeof(MainLayout).Assembly.ReadInformationalVersion()</MudText>
        </MudDrawerHeader>
        <NavMenu />        
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            <CascadingValue Value="@GreenTheme.Instance()">
                @Body
                <br />
                <br />
                <br />
            </CascadingValue>
        </MudContainer>
        <SiteFooter />
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}