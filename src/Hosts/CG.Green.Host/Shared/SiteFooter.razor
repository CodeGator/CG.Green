<MudAppBar Bottom="true" 
           Color="Color.Inherit" 
           Dense 
           Fixed
           Elevation="0">
    <MudGrid Justify="Justify.FlexStart" Spacing="1">
        <MudItem xs="12">&nbsp;</MudItem>
        <MudItem xs="3">
            <CultureSelector />
        </MudItem>
        <MudItem xs="6">
            <MudText Class="mt-2" Style="font-size: x-small" Align="Align.Center">@Assembly.GetEntryAssembly()?.ReadCopyright()</MudText>
        </MudItem>
        <MudItem xs="3">&nbsp;</MudItem>
    </MudGrid>
</MudAppBar>
