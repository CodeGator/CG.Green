@page "/admin/users"
@attribute [Authorize(Policy = PolicyNameDefaults.SuperAdminPolicy)]

<PageTitle>Users</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudText Typo="Typo.h6" Class="py-4 px-5">Users</MudText>

<MudGrid>
    <MudItem xs="12">
        <MudTable Items="_users"
                  Loading="_isLoading"
                  Dense
                  Striped
                  Virtualize
                  Filter="new Func<GreenUser,bool>(FilterFunc1)">
            <ToolBarContent>
                <MudButton StartIcon="@Icons.Material.Outlined.Create"
                            Variant="Variant.Filled"
                            Disabled="@_isLoading"
                            Color="Color.Primary"
                            OnClick="OnCreateAsync">Create</MudButton>
                <MudSpacer />
                <MudTextField @bind-Value="_gridSearchString"
                              Placeholder="Search"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Outlined.Search"
                              IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <ColGroup>
                <col style="width:40%" />
                <col style="width:40%" />
                <col />
            </ColGroup>
            <HeaderContent>
                <MudTh><MudTableSortLabel SortBy="new Func<GreenUser, object>(x=>x.Email)">Email</MudTableSortLabel></MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<GreenUser, object>(x=>x.UserName)">User Name</MudTableSortLabel></MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Email">@context.Email</MudTd>
                <MudTd DataLabel="User Name">@context.UserName</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Outlined.Delete" 
                                   OnClick="() => OnDeleteAsync(context)" 
                                   Disabled="@_isLoading" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Edit"
                                   OnClick="() => OnEditAsync(context)" 
                                   Disabled="@_isLoading" />
                </MudTd>
            </RowTemplate>
             <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                No users were found.
            </NoRecordsContent>
            <LoadingContent>
                Loading users ...
            </LoadingContent>
        </MudTable>
    </MudItem>
</MudGrid>