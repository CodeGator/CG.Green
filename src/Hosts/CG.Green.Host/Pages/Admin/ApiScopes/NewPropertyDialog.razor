<MudDialog>
    <DialogContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <MudCard Outlined>
                <MudCardContent>
                    <DataAnnotationsValidator />
                    <MudTextField AutoFocus
                                  Required
                                  Immediate
                                  Counter="@(Globals.Models.Properties.KeyLength)"
                                  Variant="Variant.Outlined"
                                  Label="Key"
                                  For="@(() => Model.Key)"
                                  @bind-Value="@Model.Key"
                                  Class="ml-auto" />
                    <MudTextField Immediate
                                  Counter="@(Globals.Models.Properties.ValueLength)"
                                  Variant="Variant.Outlined"
                                  Label="Value"
                                  For="@(() => Model.Value)"
                                  @bind-Value="@Model.Value"
                                  Class="ml-auto" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Outlined" Color="Color.Inherit" Class="mr-2 ml-auto" OnClick="Cancel">Cancel</MudButton>
                    <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Primary">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>
