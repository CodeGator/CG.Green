@page "/admin/clients"
@attribute [Authorize(Policy = PolicyNameDefaults.SuperAdminPolicy)]

<PageTitle>Clients</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudText Typo="Typo.h6" Class="py-4 px-5">Clients</MudText>

<MudGrid>
    <MudItem xs="12">
        <MudTable Items="_clients"
                  Loading="_isLoading"
                  Dense
                  Striped
                  Virtualize
                  Filter="new Func<Client,bool>(FilterFunc1)">
            <ToolBarContent>
                <MudButton StartIcon="@Icons.Material.Outlined.Create"
                            Variant="Variant.Filled"
                            Disabled="@_isLoading"
                            Color="Color.Primary"
                            OnClick="OnCreateAsync">Create</MudButton>
                <MudSpacer />
                <MudTextField @bind-Value="_gridSearchString"
                              Placeholder="Search"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Outlined.Search"
                              IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh><MudTableSortLabel SortBy="new Func<Client, object>(x=>x.Enabled)">Enabled</MudTableSortLabel></MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<Client, object>(x=>x.ClientName)">Name</MudTableSortLabel></MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Enabled">
                    @if (context.Enabled)
                    {
                        <MudIconButton Icon="@Icons.Material.Outlined.CheckBox" OnClick="@(() => EnableClientAsync(context))" />
                    }
                    else
                    {
                        <MudIconButton Icon="@Icons.Material.Outlined.CheckBoxOutlineBlank" OnClick="@(() => DisableClientAsync(context))" />
                    }
                </MudTd>
                <MudTd DataLabel="Name">@context.ClientName</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="() => OnDeleteAsync(context)" Disabled="@_isLoading" />
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="() => OnEditAsync(context)" Disabled="@_isLoading" />
                </MudTd>
            </RowTemplate>
             <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                No clients were found.
            </NoRecordsContent>
            <LoadingContent>
                Loading clients ...
            </LoadingContent>
        </MudTable>
    </MudItem>
</MudGrid>