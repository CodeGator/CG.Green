<MudDialog>
    <DialogContent>
        <EditForm Model="Model" OnValidSubmit="OnValidSubmit">
            <MudCard Outlined>
                <MudCardContent>
                    <DataAnnotationsValidator />
                    <MudText Class="mb-3" Typo="Typo.body1">Step 1 Pick an identifier</MudText>
                    <MudTextField AutoFocus
                                        Immediate
                                  Counter="@Globals.Models.Clients.ClientIdLength"
                                  Variant="Variant.Outlined"
                                        Required
                                  Label="Client Id"
                                  Mask="@(new RegexMask(@"^[\.a-zA-Z0-9]*$"))"
                                  HelperText="You can change this later, if you like."
                                  For="@(() => Model.ClientId)"
                                  @bind-Value="@Model.ClientId" />
                    <MudText Class="my-3" Typo="Typo.body1">Step 2 Pick a client flow</MudText>
                    <MudSelect T="ClientFlow"
                               HelperText=@Model.HelpText[Model.ClientFlow]
                               @bind-Value="@Model.ClientFlow"
                               For="@(() => Model.ClientFlow)"
                               Label="Client Flow"
                                  Required
                               Class="mb-6"
                               Placeholder="Select a client flow">
                        @foreach (var cf in Enum.GetNames<ClientFlow>())
                        {
                            <MudSelectItem Value="@(Enum.Parse<ClientFlow>(cf))">@cf</MudSelectItem>
                        }
                    </MudSelect>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="Cancel">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Class="ml-auto" Variant="Variant.Filled" Color=" Color.Primary">Ok</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>