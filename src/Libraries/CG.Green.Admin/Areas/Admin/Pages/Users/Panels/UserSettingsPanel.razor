<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudTextField ReadOnly
                      DisableUnderLine
                      Margin="Margin.Dense"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      Label="Id"
                      Adornment="Adornment.End"
                      AdornmentAriaLabel="copy id"
                      AdornmentIcon="@Icons.Material.TwoTone.CopyAll"
                      OnAdornmentClick="OnCopyUserId"
                      For="@(() => Model.Id)"
                      @bind-Value="@Model.Id" />
        </MudItem>
    <MudItem xs="12">
        <MudTextField AutoFocus
                      sImmediate
                      Margin="Margin.Dense"
                      Counter="@(Globals.Models.Users.UserNameLength)"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      Label="User Name"
                      HelperText="Name for the user"
                      For="@(() => Model.UserName)"
                      @bind-Value="@Model.UserName" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Immediate
                      Margin="Margin.Dense"
                      Counter="@(Globals.Models.Users.EmailLength)"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      InputType="InputType.Email"
                      Label="Email"
                      HelperText="Email for the user"
                      For="@(() => Model.Email)"
                      @bind-Value="@Model.Email" />
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.EmailConfirmed"
                     Label="Email Confirmed" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Whether or not the email address is confirmed</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.TwoFactorEnabled"
                     Label="TwoFactorEnabled" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Whether the account uses two factor authentication</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.LockoutEnabled"
                     Label="Lockout Enabled" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Whether the account can be locked out</MudText>
    </MudItem>
    @if (Model.LockoutEnabled)
    {
        <MudItem xs="12">
            <MudTextField Margin="Margin.Dense"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      InputType="InputType.DateTimeLocal"
                      Format="s"
                      Clearable
                      Label="Lockout End"
                      HelperText="The end date for a lockout period"
                      For="@(() => Model.LockoutEnd)"
                      @bind-Value="@Model.LockoutEnd" />
        </MudItem>
    }
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      InputType="InputType.Number"
                      Label="Access Failed Count"
                      HelperText="The failed login count for the account"
                      For="@(() => Model.AccessFailedCount)"
                      @bind-Value="@Model.AccessFailedCount" />
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>
