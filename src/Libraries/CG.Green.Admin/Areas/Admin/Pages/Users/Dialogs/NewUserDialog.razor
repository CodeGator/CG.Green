<MudDialog>
    <DialogContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmitAsync">
            <MudCard Outlined>
                <MudCardContent>
                    <DataAnnotationsValidator />
                    <MudTextField AutoFocus
                                  Required
                                  Immediate
                                  OnlyValidateIfDirty
                                  Margin="Margin.Dense"
                                  Counter="@(Globals.Models.Users.UserNameLength)"
                                  Variant="Variant.Outlined"
                                  Label="User Name"
                                  HelperText="Name for the user"
                                  For="@(() => Model.UserName)"
                                  @bind-Value="@Model.UserName"
                                  Class="ml-auto" />
                    <MudTextField Required
                                  Immediate
                                  Counter="@(Globals.Models.Users.EmailLength)"
                                  Variant="Variant.Outlined"
                                  Label="Email"
                                  HelperText="Email for the user"
                                  For="@(() => Model.Email)"
                                  @bind-Value="@Model.Email"
                                  Class="ml-auto" />
                    <MudTextField Required
                                  Immediate
                                  Counter="@(Globals.Models.Users.PasswordHashLength)"
                                  Variant="Variant.Outlined"
                                  Label="Password"
                                  HelperText="Password for the user"
                                  For="@(() => Model.Password)"
                                  @bind-Value="@Model.Password"
                                  Class="ml-auto" />
                    <MudTextField Required
                                  Immediate
                                  Counter="@(Globals.Models.Users.PasswordHashLength)"
                                  Variant="Variant.Outlined"
                                  Label="Confirm Password"
                                  HelperText="Confirm the password"
                                  For="@(() => Model.ConfirmPassword)"
                                  @bind-Value="@Model.ConfirmPassword"
                                  Class="ml-auto" />
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Outlined" Color="Color.Inherit" Class="mr-2 ml-auto" OnClick="Cancel">Cancel</MudButton>
                        <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Primary">Save</MudButton>
                    </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>