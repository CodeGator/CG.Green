<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Counter="@(Globals.Models.Clients.PairWiseSubjectSaltLength)"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      Label="Pairwise Subject Salt"
                      HelperText="A SALT value for generating pairwise subject IDs."
                      For="@(() => Model.PairWiseSubjectSalt)"
                      @bind-Value="@Model.PairWiseSubjectSalt" />
    </MudItem>
    <MudItem xs="12">
    <MudTextField Margin="Margin.Dense"
                    Class="ml-auto"
                    Variant="Variant.Outlined"
                    InputType="InputType.Number"
                    Label="CIBA lifetime"
                    HelperText="The backchannel authentication request lifetime, in seconds."
                    For="@(() => Model.CibaLifetime)"
                    @bind-Value="@Model.CibaLifetime" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Counter="@(Globals.Models.Clients.UserCodeTypeLength)"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      Label="User Code Type"
                      HelperText="The type of device flow user code"
                      For="@(() => Model.UserCodeType)"
                      @bind-Value="@Model.UserCodeType" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Counter="@(Globals.Models.Clients.ProtocolTypeLength)"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      Label="Protocol Type"
                      HelperText="The protocol type for the client."
                      For="@(() => Model.ProtocolType)"
                      @bind-Value="@Model.ProtocolType" />
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>