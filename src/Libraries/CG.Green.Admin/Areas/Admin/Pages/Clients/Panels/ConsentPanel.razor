<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.RequireConsent"
                     Label=@Localizer["RequireConsent"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["RequireConsentHelp"]</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.AllowRememberConsent"
                     Label=@Localizer["AllowRememberConsent"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["AllowRememberConsentHelp"]</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Class="ml-auto mb-4"
                      Variant="Variant.Outlined"
                      InputType="InputType.Number"
                      Label=@Localizer["ConsentLifetime"]
                      HelperText=@Localizer["ConsentLifetimeHelp"]
                      For="@(() => Model.ConsentLifetime)"
                      @bind-Value="@Model.ConsentLifetime" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Immediate
                      OnlyValidateIfDirty
                      Margin="Margin.Dense"
                      Counter="@(Globals.Models.Clients.LogoUriLength)"
                      Class="ml-auto mb-n4"
                      Variant="Variant.Outlined"
                      Label=@Localizer["LogoUri"]
                      HelperText=@Localizer["LogoUriHelp"]
                      For="@(() => Model.LogoUri)"
                      @bind-Value="@Model.LogoUri" />
    </MudItem>
    <MudItem xs="12">
    <MudTextField Immediate
                    OnlyValidateIfDirty
                    Margin="Margin.Dense"
                    Counter="@(Globals.Models.Clients.ClientUriLength)"
                    Class="ml-auto mb-n4"
                    Variant="Variant.Outlined"
                    Label=@Localizer["ClientUri"]
                    HelperText=@Localizer["ClientUriHelp"]
                    For="@(() => Model.ClientUri)"
                    @bind-Value="@Model.ClientUri" />
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>