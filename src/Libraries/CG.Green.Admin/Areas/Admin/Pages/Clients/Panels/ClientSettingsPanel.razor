<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudTextField ReadOnly
                        DisableUnderLine
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.ClientIdLength)"
                        Class="ml-auto"
                        Variant="Variant.Outlined"
                        Label="Client Id"
                      HelperText="This is the value external callers will use to connect to this client."
                        Adornment="Adornment.End"
                        AdornmentAriaLabel="copy id"
                        AdornmentIcon="@Icons.Material.TwoTone.CopyAll"
                        OnAdornmentClick="OnCopyClientId"
                        For="@(() => Model.ClientId)"
                        @bind-Value="@Model.ClientId" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField AutoFocus
                        Required
                        Immediate
                        OnlyValidateIfDirty
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.ClientNameLength)"
                        Class="ml-auto mb-n4"
                        Variant="Variant.Outlined"
                      Label="Client Name"
                      HelperText="Internal name for this client."
                        For="@(() => Model.ClientName)"
                        @bind-Value="@Model.ClientName" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Immediate
                        OnlyValidateIfDirty
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.DescriptionLength)"
                        Class="ml-auto mb-n6"
                        Variant="Variant.Outlined"
                        Label="Client Description"
                        Lines="4"
                        For="@(() => Model.Description)"
                        @bind-Value="@Model.Description" />
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                        Class="mb-n3"
                        @bind-Checked="Model.Enabled"
                        Label="Is Enabled" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Enable/disable the client.</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.RequireRequestObject"
                    Label="Require Request Object" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Require signed requests only.</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudSelect T="string"
                   Dense
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Label="Allowed Grant Type"
                   @bind-SelectedValues="Model.AllowedGrantTypes"
                   HelperText="The type of grant to use for this client.">
            @foreach (var grantType in Model.ValidGrantTypes.Order())
            {
                <MudSelectItem Value=@grantType>@grantType</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12">
        <MudSelect T="string"
                   Dense
                   MultiSelection
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Label="Allowed Scopes"
                   @bind-SelectedValues="Model.AllowedScopes"
                   HelperText="The scopes this client will ask for">
            @foreach (var scope in Model.ValidScopes.Order())
            {
                <MudSelectItem Value=@scope>@scope</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.EnableLocalLogin"
                     Label="Enable Local Login" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Allow local logins with user name / password</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Class="ml-auto"
                      Variant="Variant.Outlined"
                      InputType="InputType.Number"
                      Label="Authorization Code Lifetime"
                      HelperText="The lifetime of an authorization code in seconds."
                      For="@(() => Model.AuthorizationCodeLifetime)"
                      @bind-Value="@Model.AuthorizationCodeLifetime" />
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.IncludeJwtId"
                     Label="Include JWT Id" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Whether or not JWT access tokens should include an identifier</MudText>
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>