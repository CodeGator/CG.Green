<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
        <MudItem xs="12">
        <GroupBox Title="Properties">
            <MudTable Items="Model.Properties"
                    Elevation="0"
                    Dense
                    Striped
                    Virtualize
                    Loading="@_isLoading">
                <ToolBarContent>
                    <MudButton StartIcon="@Icons.Material.Outlined.Create"
                                Variant="Variant.Filled"
                                Disabled="@_isLoading"
                                Color="Color.Secondary"
                                OnClick="OnCreatePropertyAsync">Create</MudButton>
                    <MudSpacer />
                </ToolBarContent>
                <ColGroup>
                    <col style="width: 42%" />
                    <col style="width: 42%" />
                    <col />
                </ColGroup>
                <HeaderContent>
                    <MudTh><MudTableSortLabel SortBy="new Func<EditPropertyVM, object>(x=>x.Key)">Key</MudTableSortLabel></MudTh>
                    <MudTh><MudTableSortLabel SortBy="new Func<EditPropertyVM, object>(x=>x.Value)">Value</MudTableSortLabel></MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate Context="context2">
                    <MudTd DataLabel="Key">@context2.Key</MudTd>
                    <MudTd DataLabel="Value">@context2.Value</MudTd>
                    <MudTd>
                        <MudIconButton Icon="@Icons.Material.Outlined.Delete"
                                        OnClick="() => OnDeletePropertyAsync(context2)"
                                        Disabled="@_isLoading" />
                        <MudIconButton Icon="@Icons.Material.Outlined.Edit"
                                        OnClick="() => OnEditPropertyAsync(context2)"
                                        Disabled="@_isLoading" />
                    </MudTd>
                </RowTemplate>
                <NoRecordsContent>
                    No properties found
                </NoRecordsContent>
                <LoadingContent>
                    Loading ...
                </LoadingContent>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </GroupBox>
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>