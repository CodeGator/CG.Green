<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudTextField ReadOnly
                        DisableUnderLine
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.ClientIdLength)"
                        Class="ml-auto"
                        Variant="Variant.Outlined"
                        Label=@Localizer["ClientId"]
                        HelperText=@Localizer["ClientIdHelp"]
                        Adornment="Adornment.End"
                        AdornmentAriaLabel="generate id"
                        AdornmentIcon="@Icons.Material.TwoTone.CopyAll"
                        OnAdornmentClick="OnCopyClientId"
                        For="@(() => Model.ClientId)"
                        @bind-Value="@Model.ClientId" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField AutoFocus
                        Required
                        Immediate
                        OnlyValidateIfDirty
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.ClientNameLength)"
                        Class="ml-auto mb-n4"
                        Variant="Variant.Outlined"
                        Label=@Localizer["ClientName"]
                        HelperText=@Localizer["ClientNameHelp"]
                        For="@(() => Model.ClientName)"
                        @bind-Value="@Model.ClientName" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Immediate
                        OnlyValidateIfDirty
                        Margin="Margin.Dense"
                        Counter="@(Globals.Models.Clients.DescriptionLength)"
                        Class="ml-auto mb-n6"
                        Variant="Variant.Outlined"
                        Label=@Localizer["ClientDescription"]
                        Lines="4"
                        For="@(() => Model.Description)"
                        @bind-Value="@Model.Description" />
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                        Class="mb-n3"
                        @bind-Checked="Model.Enabled"
                        Label=@Localizer["IsEnabled"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["IsEnabledHelp"]</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.AllowOfflineAccess"
                    Label=@Localizer["AllowOfflineAccess"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["AllowOfflineAccessHelp"]</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                    Class="mb-n3"
                    @bind-Checked="Model.RequireRequestObject"
                    Label=@Localizer["RequireRequestObject"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["RequireRequestObjectHelp"]</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudSelect T="string"
                   Dense
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Label=@Localizer["AllowedGrantType"]
                   @bind-SelectedValues="Model.AllowedGrantTypes"
                   HelperText=@Localizer["AllowedGrantTypeHelp"]>
            @foreach (var grantType in Model.ValidGrantTypes.Order())
            {
                <MudSelectItem Value=@grantType>@grantType</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12">
        <MudSelect T="string"
                   Dense
                   MultiSelection
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Label=@Localizer["AllowedScopes"]
                   @bind-SelectedValues="Model.AllowedScopes"
                   HelperText=@Localizer["AllowedScopesHelp"]>
            @foreach (var scope in Model.ValidScopes.Order())
            {
                <MudSelectItem Value=@scope>@scope</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.RequirePkce"
                     Label=@Localizer["RequirePkce"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["RequirePkceHelp"]</MudText>
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>