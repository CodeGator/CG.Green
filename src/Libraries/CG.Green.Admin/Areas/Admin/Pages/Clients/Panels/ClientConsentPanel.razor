<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.RequireConsent"
                     Label="Require Consent" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Display a consent screen for this client.</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.AllowRememberConsent"
                     Label="Allow Remember Consent" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Allow consent to be rembered for the client.</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense"
                      Class="ml-auto mb-4"
                      Variant="Variant.Outlined"
                      InputType="InputType.Number"
                      Label="Consent Lifetime"
                      HelperText="Consent lifetime in seconds"
                      For="@(() => Model.ConsentLifetime)"
                      @bind-Value="@Model.ConsentLifetime" />
    </MudItem>
    <MudItem xs="12">
        <MudTextField Immediate
                      OnlyValidateIfDirty
                      Margin="Margin.Dense"
                      Counter="@(Globals.Models.Clients.LogoUriLength)"
                      Class="ml-auto mb-n4"
                      Variant="Variant.Outlined"
                      Label="Logo URI"
                      HelperText="Location of a logo to display on the consent screen."
                      For="@(() => Model.LogoUri)"
                      @bind-Value="@Model.LogoUri" />
    </MudItem>
    <MudItem xs="12">
    <MudTextField Immediate
                    OnlyValidateIfDirty
                    Margin="Margin.Dense"
                    Counter="@(Globals.Models.Clients.ClientUriLength)"
                    Class="ml-auto mb-n4"
                    Variant="Variant.Outlined"
                      Label="Client URI"
                      HelperText="Url to display on the consent screen."
                    For="@(() => Model.ClientUri)"
                    @bind-Value="@Model.ClientUri" />
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>