<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <GroupBox Title=@Localizer["IdentityProviderRestrictions"]>
            <MudTable Items="Model.IdentityProviderRestrictions"
                      Elevation="0"
                      Dense
                      Striped
                      Virtualize
                      Loading="@_isLoading">
                <ToolBarContent>
                    <MudButton StartIcon="@Icons.Material.Outlined.Create"
                               Variant="Variant.Filled"
                               Disabled="@_isLoading"
                               Color="Color.Secondary"
                               OnClick="OnCreateRestrictionAsync">@Localizer["Create"]</MudButton>
                    <MudSpacer />
                </ToolBarContent>
                <ColGroup>
                    <col style="width: 85%" />
                    <col />
                </ColGroup>
                <HeaderContent>
                    <MudTh><MudTableSortLabel SortBy="new Func<EditProviderVM, object>(x=>x.Name)"></MudTableSortLabel></MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate Context="context2">
                    <MudTd>@context2.Name</MudTd>
                    <MudTd>
                        <MudIconButton Icon="@Icons.Material.Outlined.Delete"
                                       OnClick="() => OnDeleteRestrictionAsync(context2)"
                                       Disabled="@_isLoading" />
                        <MudIconButton Icon="@Icons.Material.Outlined.Edit"
                                       OnClick="() => OnEditRestrictionAsync(context2)"
                                       Disabled="@_isLoading" />
                    </MudTd>
                </RowTemplate>
                <NoRecordsContent>
                    @Localizer["NoProviders"]
                </NoRecordsContent>
                <LoadingContent>
                    @Localizer["LoadingProviders"]
                </LoadingContent>
                <PagerContent>
                    <MudTablePager RowsPerPageString=@Localizer["RowsPerPage"] />
                </PagerContent>
            </MudTable>
        </GroupBox>
    </MudItem>
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>