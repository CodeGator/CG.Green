<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.AllowPlainTextPkce"
                     Label="Allow Plain Text PKCE" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Allow PKCE to be sent in plain text.</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.RequirePkce"
                     Label="Require PKCE" />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">Require Proof Key for Code Exchange</MudText>
    </MudItem>    
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>
