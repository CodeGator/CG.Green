<MudGrid>
    <MudItem xs="12">&nbsp;</MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.AllowPlainTextPkce"
                     Label=@Localizer["AllowPlainTextPkce"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["AllowPlainTextPkceHelp"]</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudCheckBox T="bool"
                     Class="mt-n3 mb-n3"
                     @bind-Checked="Model.RequirePkce"
                     Label=@Localizer["RequirePkce"] />
        <MudText Class="text-muted ml-3" Typo="Typo.caption">@Localizer["RequirePkceHelp"]</MudText>
    </MudItem>    
    <MudItem xs="12">&nbsp;</MudItem>
</MudGrid>
