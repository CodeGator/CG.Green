<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
        <Description>A UI for administering the CG.Green microservice.</Description>
        <RootNamespace>CG.Green</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CG.Blazor" Version="2023.2.2" />
      <PackageReference Include="CG.Options" Version="2023.1.3" />
      <PackageReference Include="Nerdbank.GitVersioning" Version="3.5.119">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\CG.Green.Abstractions\CG.Green.Abstractions.csproj" />
        <ProjectReference Include="..\CG.Green.Identity\CG.Green.Identity.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Areas\Admin\Pages\Clients\ClientsIndex.razor.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>ClientsIndex.razor.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Areas\Admin\Pages\Clients\ClientsIndex.razor.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>ClientsIndex.razor.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

</Project>
